{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["./src/services/*"],
      "@resolvers/*": ["./src/resolvers/*"],
      "@data/*": ["./src/data/*"],
      "@handlers/*": ["./src/handlers/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"]
}
